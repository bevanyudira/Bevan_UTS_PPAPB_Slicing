<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to My App"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/image_profil"
            android:layout_below="@+id/text_welcome"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/baseline_account_box_24"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_below="@+id/image_profil"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter Your Name"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:textColorHint="#959595"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@+id/name_input"
            android:layout_marginTop="10dp"
            android:backgroundTint="#2196F3"
            android:textSize="10sp"
            android:layout_alignStart="@id/name_input"
            />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:text="Cancel"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:layout_toRightOf="@id/submit_button"
            android:layout_below="@id/name_input"
            android:layout_alignEnd="@id/name_input"/>
    </RelativeLayout>


</RelativeLayout>